<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected/Checked states - use white for visibility against primary background -->
    <item android:color="@color/on_primary" android:state_checked="true" android:state_selected="true" />
    <item android:color="@color/on_primary" android:state_checked="true" />
    <item android:color="@color/on_primary" android:state_selected="true" />
    <!-- Unselected/Unchecked states - use secondary text color -->
    <item android:color="@color/text_secondary" android:state_checked="false" />
    <!-- Default fallback - ensure icon is always visible -->
    <item android:color="@color/text_secondary" />
</selector>

