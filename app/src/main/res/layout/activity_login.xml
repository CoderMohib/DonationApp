<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:minHeight="0dp">

            <!-- Main Card Container -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_card_horizontal"
                android:layout_marginEnd="@dimen/spacing_card_horizontal"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="@dimen/corner_radius_card"
                app:strokeWidth="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/card_padding_horizontal"
                    android:paddingTop="@dimen/card_padding_vertical"
                    android:paddingEnd="@dimen/card_padding_horizontal"
                    android:paddingBottom="@dimen/spacing_bottom_padding">

                    <!-- App Logo/Icon -->
                    <ImageView
                        android:id="@+id/app_logo"
                        android:layout_width="156dp"
                        android:layout_height="135dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/app_logo"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Welcome Title -->
                    <TextView
                        android:id="@+id/welcome_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_logo_bottom"
                        android:letterSpacing="0.01"
                        android:text="@string/welcome_back"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_welcome"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/app_logo" />

                    <!-- Welcome Subtitle -->
                    <TextView
                        android:id="@+id/welcome_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_title_bottom"
                        android:letterSpacing="0.01"
                        android:text="@string/welcome_subtitle"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_subtitle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/welcome_title" />

                    <!-- Email Input -->
                    <include
                        android:id="@+id/email_layout"
                        layout="@layout/layout_text_input"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_subtitle_bottom"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/welcome_subtitle" />

                    <!-- Set email-specific attributes programmatically in Java -->

                    <!-- Password Input -->
                    <include
                        android:id="@+id/password_layout"
                        layout="@layout/layout_text_input"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_input_between"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/email_layout" />

                    <!-- Forgot Password Link -->
                    <TextView
                        android:id="@+id/forgot_password_link"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:minHeight="48dp"
                        android:paddingStart="@dimen/spacing_small"
                        android:paddingEnd="@dimen/spacing_small"
                        android:text="@string/forgot_password"
                        android:textColor="@color/text_link"
                        android:textSize="@dimen/text_size_link"
                        android:textStyle="normal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/password_layout" />

                    <!-- Login Button Container -->
                    <include
                        android:id="@+id/login_button_container"
                        layout="@layout/layout_button_with_progress"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/forgot_password_link" />

                    <LinearLayout
                        android:id="@+id/signup_link_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/login_button_container">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dont_have_account"
                            android:textColor="@color/text_secondary"
                            android:textSize="@dimen/text_size_medium" />

                        <TextView
                            android:id="@+id/signup_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:minHeight="48dp"
                            android:paddingStart="@dimen/spacing_small"
                            android:paddingTop="@dimen/spacing_small"
                            android:paddingEnd="@dimen/spacing_small"
                            android:paddingBottom="@dimen/spacing_small"
                            android:text="@string/signup_button"
                            android:textColor="@color/text_link"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
