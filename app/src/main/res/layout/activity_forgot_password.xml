<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:minHeight="0dp">

            <!-- Main Card Container -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_card_horizontal"
                android:layout_marginEnd="@dimen/spacing_card_horizontal"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="@dimen/corner_radius_card"
                app:strokeWidth="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/card_padding_horizontal"
                    android:paddingTop="@dimen/card_padding_vertical"
                    android:paddingEnd="@dimen/card_padding_horizontal"
                    android:paddingBottom="@dimen/spacing_bottom_padding">

                    <!-- App Logo/Icon -->
                    <ImageView
                        android:id="@+id/app_logo"
                        android:layout_width="156dp"
                        android:layout_height="135dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/app_logo"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Title -->
                    <TextView
                        android:id="@+id/forgot_password_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_logo_bottom"
                        android:letterSpacing="0.01"
                        android:text="@string/forgot_password"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_welcome"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/app_logo" />

                    <!-- Subtitle -->
                    <TextView
                        android:id="@+id/forgot_password_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_title_bottom"
                        android:gravity="center"
                        android:letterSpacing="0.01"
                        android:text="@string/forgot_password_subtitle"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_subtitle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/forgot_password_title" />

                    <!-- Email Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/email_layout"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_subtitle_bottom"
                        android:hint="@string/email_label"
                        app:boxCornerRadiusBottomEnd="@dimen/input_corner_radius"
                        app:boxCornerRadiusBottomStart="@dimen/input_corner_radius"
                        app:boxCornerRadiusTopEnd="@dimen/input_corner_radius"
                        app:boxCornerRadiusTopStart="@dimen/input_corner_radius"
                        app:boxStrokeColor="@color/input_outline"
                        app:boxStrokeWidth="@dimen/input_stroke_width"
                        app:boxStrokeWidthFocused="@dimen/input_stroke_width_focused"
                        app:errorTextColor="@color/input_error"
                        app:hintTextColor="@color/input_hint"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/forgot_password_subtitle">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/email_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autofillHints="email"
                            android:inputType="textEmailAddress"
                            android:minHeight="@dimen/input_height"
                            android:paddingStart="@dimen/input_padding_horizontal"
                            android:paddingEnd="@dimen/input_padding_horizontal"
                            android:textColor="@color/input_text"
                            android:textColorHint="@color/input_hint"
                            android:textSize="@dimen/text_size_body" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Reset Button Container -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/reset_button_container"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height"
                        android:layout_marginTop="@dimen/spacing_xlarge"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/email_layout">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/reset_button"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:elevation="0dp"
                            android:letterSpacing="0.01"
                            android:stateListAnimator="@null"
                            android:text="@string/reset_password_button"
                            android:textColor="@color/text_on_primary"
                            android:textSize="@dimen/text_size_large"
                            android:textStyle="bold"
                            app:backgroundTint="@color/button_primary"
                            app:backgroundTintMode="src_over"
                            app:cornerRadius="@dimen/button_corner_radius"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/progress_indicator"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:indeterminate="false"
                            android:progress="0"
                            android:max="100"
                            android:visibility="gone"
                            app:indicatorColor="@color/text_on_primary"
                            app:trackColor="#33FFFFFF"
                            app:trackThickness="3.5dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Back to Login Link -->
                    <TextView
                        android:id="@+id/back_to_login_link"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:minHeight="48dp"
                        android:paddingStart="@dimen/spacing_small"
                        android:paddingEnd="@dimen/spacing_small"
                        android:text="@string/back_to_login"
                        android:textColor="@color/text_link"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/reset_button_container" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
